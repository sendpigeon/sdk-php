{
    "name": "sendpigeon/sdk",
    "description": "Official PHP SDK for SendPigeon - Transactional Email API",
    "type": "library",
    "license": "MIT",
    "keywords": ["email", "transactional", "api", "sendpigeon"],
    "homepage": "https://sendpigeon.dev",
    "authors": [
        {
            "name": "SendPigeon",
            "email": "support@sendpigeon.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SendPigeon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SendPigeon\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable"
}
